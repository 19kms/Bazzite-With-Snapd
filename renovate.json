{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dockerfile": {
    "enabled": true
  },
  "docker": {
    "enabled": true,
    "automerge": false
  },
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "automerge": false,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^build_files/gnome-extension-refs\\.env$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n[A-Z0-9_]+_REF=(?<currentValue>\\S+)"
      ]
    }
  ],
  "pruneStaleBranches": true,
  "prConcurrentLimit": 3,
  "semanticCommits": true
}
